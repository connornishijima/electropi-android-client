<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">

    </style>

    <style name="baseText">
        <item name="android:textColor">@color/fontColor</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">5dip</item>
    </style>

    <style name="highlightText" parent="baseText">
        <item name="android:textColor">@color/highlightColor</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="headerText" parent="highlightText">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="subheaderText" parent="baseText">
        <item name="android:textSize">24sp</item>
    </style>

</resources>
