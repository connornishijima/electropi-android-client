<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity$PlaceholderFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            android:dividerPadding="0sp"
            android:padding="0sp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="top">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dip"
                    android:src="@drawable/logo_whole_app"
                    android:contentDescription="@string/electropi"
                    android:paddingTop="30sp" />

                <TextView android:text="@string/electropi"
                    style="@style/headerText"
                    android:layout_height="wrap_content"
                    android:textSize="40sp"
                    android:layout_width="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="0px"
                    android:gravity="center" />

            </RelativeLayout>

            <TextView android:text="@string/forandroid"
                style="@style/subheaderText"
                android:padding="0px"
                android:layout_weight="1"
                android:autoText="false"
                android:layout_margin="0px"
                android:layout_height="wrap_content"
                android:gravity="center|bottom"
                android:height="25sp" />
            <TextView android:text="@string/version"
                style="@style/baseText"
                android:textSize="14sp"
                android:textColor="#666666"
                android:padding="0px"
                android:layout_margin="0px"
                android:id="@+id/ver" />

            <TextView android:text="@string/serverIp"
                style="@style/baseText"
                android:paddingTop="20sp"
                android:textSize="18sp" />
            <EditText
                android:inputType="text"
                android:id="@+id/epiIp"
                style="@style/highlightText"
                android:background="#080808"
                android:padding="12sp"
                android:autoText="false"><requestFocus/></EditText>
            <TextView android:text="@string/deviceName"
                style="@style/baseText"
                android:textSize="18sp" />
            <EditText
                android:inputType="text"
                android:id="@+id/deviceName"
                style="@style/highlightText"
                android:background="#080808"
                android:padding="12sp" />
            <TextView android:text="WiFi SSID"
                style="@style/baseText"
                android:textSize="18sp" />
            <EditText
                android:inputType="text"
                android:id="@+id/netSSID"
                style="@style/highlightText"
                android:background="#080808"
                android:padding="12sp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/button"
                    android:text="@string/save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@color/highlightColor"
                    android:textColor="@color/buttonFontColor"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="14dp" />
                </RelativeLayout>

            <TextView android:text="@string/settings_saved"
                style="@style/baseText"
                android:textColor="@color/confirmColor"
                android:visibility="invisible"
                android:id="@+id/settingsSaved"
                />
            <TextView android:text="@string/app_details"
                style="@style/baseText"
                android:textSize="14sp"
                android:layout_margin="0px" />
            <TextView android:text="@string/developedby"
                style="@style/baseText"
                android:textSize="16sp"
                android:id="@+id/appDeveloped"
                android:layout_margin="0px"
                android:paddingBottom="20sp" />
            </LinearLayout>
        </ScrollView>
